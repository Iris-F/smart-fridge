<%- include('../partials/head')%>

    <body>
        <%- include('../partials/navbar.ejs')%>
            <div class="container">
                <h1>Add a Shopping List Item</h1>
                <hr>
                <h4>Available Inventory Items for category: <%= category %>
                </h4>
                <ul>
                    <% for(let product of products) { %>
                        <li>

                            <%= product.name %>,
                                Quantity: <%= product.quantity %>


                        </li>
                        <% }%>
                </ul>
                <hr>
                <h2>
                    Add Shopping List Items
                </h2>
                <form action="/products" method="POST">
                    <label for="name">Name of Shopping List Item</label>
                    <input type="text" name="name" id="name" required placeholder="Shopping List item name">
                    <label for="quantity">Quantity</label>
                    <input type="number" id="quantity" name="quantity" required placeholder="Quantity">
                    <label for="category">Category</label>
                    <input type="text" name="category" id="category" value="<%=category%>" disabled>
                    <button disabled>Submit</button>
                </form>
            </div>
            <hr>
            <div class="container">
                <a href="/groceries/categories">Back to categories</a>
                <a href="/groceries"">Cancel</a>
                </form>
            </div>
    </body>

    </html>